body {
	background: #eee;
	font-family: Georgia, Verdana, sans-serif;
	
	font-size: 16px;
}

h1,h2,h3 {
	color:#383838;
	padding:0;
	padding-top:1em;
	margin:0;
}

h1 {
	font-size: 1.8em;
}

h2 {
	font-size: 1.4em;
}

p {
	margin:0;
	margin-top:0.5em;
	padding:0;
}

h1 a {
	text-decoration: none;
	color:#383838;
}

h1 a:hover {
	color: #880000;
}

img {
	max-width: 100%;
}

#wrap {
	max-width: 800px;
	margin: 0 auto;
	padding-left:1.2em;
	padding-right:1.2em;
}



#header h1 {

	padding: 0.25em 0 0 0;
	margin: 0;
	font-weight: normal;
	font-size: 4em;
	line-height: 1.3em;
}



#menu {
	background: #880000;
	height: 2em;
	line-height: 2em;
	color: #ddd;
	font-size: 1.3em;
}

#menu ul {
	margin: 0;
	padding:0;
	list-style-type: none;
}

#menu ul li {
	display: inline-block; 
}

#menu ul li a {
	text-decoration: none;
	color: #fff;
	display:block;
	padding: 0 0.4em 0 0.4em;
}

#menu ul li.first a{
	padding-left:1em;
}

#menu ul li a:hover {
	background: #ddd;
	color: #880000;
	text-decoration: none;
}

#content {
	font-family: Arial, sans-serif;
	margin:0;
	background: #eee;
	padding: 0.4em 1.2em;
}

.post {
	margin-bottom:1em;
}


#footer { 
	background: #353535;
	color: #fff;
	padding: 0.4em 1.2em;
}

#footer a {
	color: #fff;
	text-decoration: none;
}

#footer a:hover {
	color: #cc0000;
}

#postlist {
	font-size: 1em;
	list-style-type: none;
	margin:0;	
}

#postlist li {
	width:100%;
	margin-bottom: 1.5em;
}

#postlist p {
	margin:0;
	padding: 0;
	font-size: 1.2em;
}

.date {
	display:block;
}

.info {
	font-weight: bold;
	margin-bottom:0.5em;
}

#postlist p.description {
	font-size: 1em;
}

pre.sourceCode {
	background-color: #ddd;
	padding:0.5em 0.1em;
	overflow: auto;

}

code {
	font-size: 0.8em;
}

p > code {
	white-space: nowrap;
}
